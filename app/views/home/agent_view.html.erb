<div class="page-banner-section section">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="page-banner-title">Agent Details</h1>
                <ul class="page-breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Agent Details</li>
                </ul>
            </div>
        </div>
    </div>
</div>
    <!--Page Banner Section end-->

    <!--Agent Section start-->
<div class="agent-section section pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50 pb-70 pb-lg-50 pb-md-40 pb-sm-30 pb-xs-20">
  <div class="container">
      <div class="row row-25">
        <!--Agent Image-->
        <div class="col-lg-5 col-12 mb-30">
            <div class="agent-image">
              <%= image_tag @agent_profile.profile_image %>
            </div>
        </div>

          <!--Agent Content-->
          <div class="col-lg-7 col-12">
              <div class="agent-content">
                  <h3 class="title"><%= @agent_profile.name.capitalize %></h3>
                  <p><%= @agent_profile.name.capitalize %> is a Specialist Real Estate Agent with 8 years of   Experience in Real Estate field. He achive success with his honesty,determination, hardwork and commetment. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et, totam?</p>
                  <div class="row">
                      <div class="col-md-6 col-12 mb-30">
                          <h4>Persoanl Info</h4>
                          <ul>
                              <li><i class="pe-7s-map"></i><%= @agent_profile.address %></li>
                              <li><i class="pe-7s-phone"></i><a href="#"><%= @agent_profile.mobile_number %></a></li>
                              <li><i class="pe-7s-mail-open"></i><a href="#"><%= @agent_profile.email %></a></li>
                              <li><i class="pe-7s-global"></i><a href="#">www.example.com</a></li>
                              <li><i class="pe-7s-photo"></i><%= @property.count %> Properties</li>
                          </ul>
                          <div class="social">
                              <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                              <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                              <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                              <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
                          </div>
                      </div>
                      <% if @user.role == "agent" %>
                          <div class="col-md-6 col-12 mb-30">
                              <h4>Agency Info</h4>
                              <ul>
                                  <li><span>Agency:</span> <span><a href="#">Royao Estates</a> <a href="#">Duplex Estates</a></span></li>
                                  <li><span>Company:</span> <span><%= @company&.title %></span></li>
                                  <li><span>Licenses:</span> <span>AB7876A6</span></li>
                                  <li><span>Number:</span> <span><a href="#"><%= @agent_profile.mobile_number %></a></span></li>
                                  <li><span>Address:</span> <span><%= @agent_profile.address %></span></li>
                              </ul>
                          </div>
                      <% end %>
                  </div>
                  <a href="", class="btn">connect</a>
              </div>
          </div>
      </div>
  </div>
</div>
    <!--Agent Section end-->
<% if @user.role == "agent" %>
  <!--Feature property section start-->
  <div class="property-section section pb-100 pb-lg-80 pb-md-70 pb-sm-60 pb-xs-50">
      <div class="container">
          <!--Section Title start-->
          <div class="row">
              <div class="col-md-12 mb-60 mb-xs-30">
                  <div class="section-title center">
                      <h1><%= @agent_profile.name.capitalize %> Properties</h1>
                  </div>
              </div>
          </div>
          <!--Section Title end-->
          <div class="row">
              <!--Property Slider start-->
              <div class="property-carousel section slider-space-30">
                  <!--Property start-->
                <% @property.each do |property|%>  
                  <div class="property-item col">
                      <div class="property-inner">
                          <div class="image">
                              <a href="<%= home_property_path(property)%>"><img src="https://htmldemo.net/khonike/khonike/assets/images/property/property-1.jpg" alt=""></a>
                              <ul class="property-feature">
                                  <li>
                                      <span class="area"><img src="<%= asset_path('web/area.png')%>" alt=""><%= property.size %> SqFt</span>
                                  </li>
                                  <li>
                                      <span class="bed"><img src="<%= asset_path('web/bed.png')%>" alt=""><%= property.bedrooms %></span>
                                  </li>
                                  <li>
                                      <span class="bath"><img src="<%= asset_path('web/bath.png')%>" alt=""><%= property.bathrooms %></span>
                                  </li>
                                  <li>
                                      <span class="parking"><img src="<%= asset_path('web/parking.png')%>" alt=""><%= property.parking %></span>
                                  </li>
                              </ul>
                          </div>
                          <div class="content">
                              <div class="left">
                                  <h3 class="title"><a href="single-properties.html"><%= property.name.capitalize %></a></h3>
                                  <span class="location"><img src="assets/images/icons/marker.png" alt=""><%= property.location.capitalize %></span>
                              </div>
                              <div class="right">
                                  <div class="type-wrap">
                                      <span class="price">$550<span>M</span></span>
                                      <span class="type">For Rent</span>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
  </div>
<% end %>