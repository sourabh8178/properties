<%#= render partial: "admin/profiles/index", profiles: @profiles %>
<div class="row">
  <div class="col-md-12">
    <div class="card card-plain">
      <div class="card-header card-header-primary">
        <h4 class="card-title mt-0">Properties</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
					  <thead class="">
					  	<th>Profie</th>
					    <th>Name</th>
							<th>email</th>
							<th>mobile</th>
							<th>address</th>
							<th colspan="3">Action</th>             
					  </thead>
					  <tbody>
					    <% @profiles.each do |prop| %>
								<tr>
									<td><%= image_tag prop&.profile_image, style: "width: 100px; height: 94px; " %></td>
									<td><%= prop.name %></td>
									<td><%= prop.email %></td>
									<td><%= prop.mobile_number %></td>
									<td><%= prop.address %></td>
									<td><%= link_to "show", admin_profile_path(prop), class: "btn btn-info" %></td>
									<td><%= link_to "Edit", edit_admin_profile_path(prop), class: "btn btn-warning" %></td>			
						      <td><%= button_to 'Destroy', admin_profile_path(prop), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
								</tr>
							<% end %>
					  </tbody>
					</table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "new", new_admin_profile_path, class: "btn btn-success " %>
